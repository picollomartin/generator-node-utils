{
  "auth0": {
    "name": "Auth0 integration",
    "templates": [
      {
        "name": "auth0MiddlewareRoutes",
        "templatePath": "example_routes.ejs",
        "recommendedPath": "./app/example_routes.js",
        "conditionalPrompt": "exampleFiles"
      },
      {
        "name": "auth0MiddlewareConfig",
        "templatePath": "example_index.js",
        "recommendedPath": "./app/config/example_index.js",
        "conditionalPrompt": "exampleFiles"
      },
      {
        "name": "auth0MiddlewareEnv",
        "templatePath": "example_.env",
        "recommendedPath": "./app/example_.env",
        "conditionalPrompt": "exampleFiles"
      },
      {
        "name": "auth0Middleware",
        "templatePath": "auth0/auth0.ejs",
        "recommendedPath": "./app/middlewares/auth0.js"
      }
    ],
    "prompts": [
      {
        "type": "confirm",
        "name": "scopeValidation",
        "message": "Would you like to add scope validation?",
        "example": true
      },
      {
        "type": "confirm",
        "name": "exampleFiles",
        "message": "Would you like to generate example files for this tool(routes, config, env)?",
        "example": true
      },
      {
        "type": "confirm",
        "name": "comments",
        "message": "Would you like to enable the comments?",
        "example": true
      }
    ],
    "packages": [
      { "name": "express-jwt", "version": "latest", "type": "prod" },
      { "name": "jwks-rsa", "version": "latest", "type": "prod" },
      { "name": "express-jwt-authz", "version": "latest", "type": "prod" }
    ],
    "welcomeMessage": "This tool would generate a new middleware for validate {bold JWT} tokens generated by {rgb(235, 84, 36).bold Auth0}",
    "finalMessage": "You should configure this environment variables (BLA_1, BLA_2) in your config file"
  },
  "transaction": {
    "name": "Sequelize transaction",
    "templates": [
      {
        "name": "sequelizeTransaction",
        "templatePath": "sequelize_transaction.ejs",
        "recommendedPath": "./app/interactors/modelName.js"
      }
    ],
    "prompts": [
      {
        "type": "input",
        "name": "modelName",
        "message": "Enter model name",
        "validate": "alphanumeric",
        "example": "example"
      },
      {
        "type": "list",
        "name": "isolationLevel",
        "message": "Select the isolation level for your transaction",
        "default": "Default (Isolation level of the database)",
        "example": "Default (Isolation level of the database)",
        "choices": [
          {
            "name": "Default (Isolation level of the database)",
            "value": ""
          },
          {
            "name": "Read uncommited",
            "value": " isolationLevel: sequelize.Transaction.ISOLATION_LEVELS.READ_UNCOMMITTED "
          },
          {
            "name": "Read commited",
            "value": " isolationLevel: sequelize.Transaction.ISOLATION_LEVELS.READ_COMMITTED "
          },
          {
            "name": "Repeatable read",
            "value": " isolationLevel: sequelize.Transaction.ISOLATION_LEVELS.REPEATABLE_READ "
          },
          {
            "name": "Serializable",
            "value": " isolationLevel: sequelize.Transaction.ISOLATION_LEVELS.SERIALIZABLE "
          }
        ]
      },
      {
        "type": "list",
        "name": "types",
        "message": "Select the type of your transaction",
        "default": "Default (implicit deferred)",
        "example": "Default (implicit deferred)",
        "choices": [
          { "name": "Default (implicit deferred)", "value": "" },
          { "name": "Deferred", "value": " type: sequelize.Transaction.TYPES.DEFERRED " },
          { "name": "Inmediate", "value": " type: sequelize.Transaction.TYPES.IMMEDIATE " },
          { "name": "Exclusive", "value": " type: sequelize.Transaction.TYPES.EXCLUSIVE " }
        ]
      },
      {
        "type": "confirm",
        "name": "comments",
        "message": "Would you like to enable the comments?",
        "example": true
      }
    ],
    "welcomeMessage": "This tool would generate a interactor template for a transaction in sequelize",
    "finalMessage": "You don't need to configure any environment variables in your config file."
  }
}
